<LocationVisualizer>:
    orientation: 'vertical'

    MyMapView:
        id: map_view
        zoom: 15
        lat: app.DEFAULT_LAT
        lon: app.DEFAULT_LON

    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.15
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1
            Button:
                text: 'Add UFO coordinates'
                on_release: root.enter_ufo_coordinates()
            Button:
                text: 'Add your coordinates'
                on_release: root.enter_user_coordinates()
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.05
            Label:
                id: azimuth_label
                text: 'Azimuth: '
            Label:
                id: height_label
                text: 'UFO Height: '
