<SaveSignalDialog>:
    size_hint_y: 0.7
    size_hint_x: 0.35
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                orientation: "horizontal"
                Label:
                    size_hint_x: 0.3
                    text: "Lat:"
                TextInput:
                    id: lat_txt_in
                    text: str(app.DEFAULT_LAT)
                    font_size: 30
            BoxLayout:
                orientation: "horizontal"
                Label:
                    size_hint_x: 0.3
                    text: "Lon:"
                TextInput:
                    id: lon_txt_in
                    text: str(app.DEFAULT_LON)
                    font_size: 30
            BoxLayout:
                orientation: "horizontal"
                Label:
                    size_hint_x: 0.3
                    text: "Strength:"

                TextInput:
                    id: signal_txt_in
                    font_size: 30
                    size_hint_x: 0.6
                    text: "10"
                Label:
                    size_hint_x: 0.15
                    text: "[dB]"
            BoxLayout:
                size_hint_y: 0.5
                orientation: "horizontal"

                Button:
                    text: 'Add strength'
                    on_press: root.save()
            BoxLayout:
                Label:
                    size_hint_x: 0.5
                    text: "Sample rate:"

                TextInput:
                    id: radio_sample_rate
                    font_size: 20
                    text: str(app.DEFAULT_SAMPLE_RATE)
            BoxLayout:
                Label:
                    size_hint_x: 0.5
                    text: "Center freq:"

                TextInput:
                    id: freq_txt_in
                    font_size: 20
                    text: str(app.DEFAULT_CENTER_FREQ)
            BoxLayout:
                Label:
                    size_hint_x: 0.5
                    text: "Gain:"

                TextInput:
                    id: gain_txt_in
                    font_size: 30
                    text: str(app.DEFAULT_GAIN)
            BoxLayout:
                size_hint_y: 0.5
                orientation: "horizontal"

                Button:
                    text: 'Get from radio'
                    on_press: root.save_auto_radio()
                Button:
                    text: 'Cancel'
                    on_press: root.close()