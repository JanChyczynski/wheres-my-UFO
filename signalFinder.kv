<MyMapMarker>
    source: "alien100.png"
    size: self.size

<SignalFinder>:
    orientation: 'vertical'

    MapView:
        id: map_view
        zoom: 15
        lat: app.DEFAULT_LAT
        lon: app.DEFAULT_LON
        MapMarker:
            lat: app.DEFAULT_LAT + 0.001
            lon: app.DEFAULT_LON + 0.001
            source: "alien100.png"
            size: [20,20]
            size_hint: (None, None)
        MapMarkerPopup:
            lat: app.DEFAULT_LAT - 0.001
            lon: app.DEFAULT_LON - 0.001
            source: "alien100.png"
            size: [50, 50]


    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.1
        Label:
            text: 'Signal/Distance:'
            size_hint_x: 0.2
        Slider:
            size_hint_x: 0.7
            id: slider
            min: 0
            max: 20
            step: 0.01
            on_touch_move: root.update_markers(slider.value)
        Label:
            size_hint_x: 0.1

            text: "{:3.2f}".format(slider.value)
        Button:
            size_hint_x: 0.2
            text: 'Add coordinates'
            on_release: root.add_coordinates()
