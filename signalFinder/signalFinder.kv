<SignalFinder>:
    orientation: 'vertical'

    MyMapView:
        id: map_view
        zoom: 15
        lat: app.DEFAULT_LAT
        lon: app.DEFAULT_LON

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.1
        Label:
            size_hint_x: 0.18
            text: "[u]signal strength[/u]\n     distance"
            markup: True
            center_text: 0.5
        Slider:
            size_hint_x: 0.7
            id: slider
            min: 0
            max: 200
            step: 0.01
            on_touch_move: root.heatmap_layer.reposition()
        Label:
            size_hint_x: 0.1

            text: "{:3.2f}".format(slider.value)
        Button:
            size_hint_x: 0.18
            text: 'Calculate\nratio'
            on_release: root.threaded_calculate_ratio()
        Button:
            size_hint_x: 0.2
            text: 'Add \ncoordinates'
            on_release: root.enter_coordinates()
