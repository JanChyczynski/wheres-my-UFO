<LocalisationVisualizer>:
    orientation: 'vertical'

    MapView:
        id: map_view
        zoom: 15
        lat: app.DEFAULT_LAT
        lon: app.DEFAULT_LON
        MapMarker:
            lat: app.DEFAULT_LAT + 0.001
            lon: app.DEFAULT_LON + 0.001
            source: "alien100.png"

    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.15
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1
            Button:
                text: 'Set source'
                on_release: root.set_UFO_coordinates_source()
            Button:
                text: 'Add UFO coordinates'
                on_release: root.enter_UFO_coordinates()
            Button:
                text: 'Add your coordinates'
                on_release: root.enter_user_coordinates()
        Label:
            id: azimuth_label
            text: 'Azimuth: '
            size_hint_y: 0.05
