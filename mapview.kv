<MainLayout>
    do_default_tab: False
    tab_width: self.width / 2

    TabbedPanelItem:
        text: "Signal Finder"
        SignalFinder:

    TabbedPanelItem:
        text: "Localisation Visualiser"
        LocalisationVisualizer:

<SignalFinder>:
    orientation: 'vertical'

    MapView:
        id: map_view
        zoom: 15
        lat: app.DEFAULT_LAT
        lon: app.DEFAULT_LON
        MapMarker:
            lat: app.DEFAULT_LAT + 0.001
            lon: app.DEFAULT_LON + 0.001
            source: "alien100.png"


    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.1
        Slider:
            id: slider
            min: 0
            max: 100
            step: 1
        Button:
            size_hint_x: 0.2
            text: 'Add coordinates'
            on_release: root.add_coordinates()


<LocalisationVisualizer>:
    orientation: 'vertical'

#    Slider:
#        id: slider
#        min: 0
#        max: 100
#        step: 1
#        size_hint_y: None

    MapView:
        id: map_view
        zoom: 15
        lat: app.DEFAULT_LAT
        lon: app.DEFAULT_LON
        MapMarker:
            lat: app.DEFAULT_LAT + 0.001
            lon: app.DEFAULT_LON + 0.001
            source: "alien100.png"


    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.1
        Button:
            text: 'Add coordinates'
            on_release: root.add_coordinates()

<SaveDialog>:
    size_hint_y: 0.45
    size_hint_x: 0.35
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                orientation: "horizontal"
                Label:
                    size_hint_x: 0.3
                    text: "Lat:"
                TextInput:
                    id: lat_txt_in
                    text: str(app.DEFAULT_LAT)
                    font_size: 30
            BoxLayout:
                orientation: "horizontal"
                Label:
                    size_hint_x: 0.3
                    text: "Lon:"
                TextInput:
                    id: lon_txt_in
                    text: str(app.DEFAULT_LON)
                    font_size: 30

        BoxLayout:
            size_hint_y: 0.2
            orientation: "horizontal"

            Button:
                text: 'Save'
                on_press: root.save()

            Button:
                text: 'Cancel'
                on_press: root.cancel()

