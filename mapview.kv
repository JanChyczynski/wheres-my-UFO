<MainLayout>
    do_default_tab: False
    tab_width: self.width / 2

    TabbedPanelItem:
        text: "Signal Finder"
        SignalFinder:

    TabbedPanelItem:
        text: "Localisation Visualiser"
        LocalisationVisualizer:

<SaveUFODialog,SaveUserDialog>:
    size_hint_y: 0.45
    size_hint_x: 0.35
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                orientation: "horizontal"
                Label:
                    size_hint_x: 0.3
                    text: "Lat:"
                TextInput:
                    id: lat_txt_in
                    text: str(app.DEFAULT_LAT)
                    font_size: 30
            BoxLayout:
                orientation: "horizontal"
                Label:
                    size_hint_x: 0.3
                    text: "Lon:"
                TextInput:
                    id: lon_txt_in
                    text: str(app.DEFAULT_LON)
                    font_size: 30

        BoxLayout:
            size_hint_y: 0.2
            orientation: "horizontal"

            Button:
                text: 'Save'
                on_press: root.save()

            Button:
                text: 'Cancel'
                on_press: root.cancel()

<SaveSignalDialog>:
    size_hint_y: 0.45
    size_hint_x: 0.35
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                orientation: "horizontal"
                Label:
                    size_hint_x: 0.3
                    text: "Lat:"
                TextInput:
                    id: lat_txt_in
                    text: str(app.DEFAULT_LAT)
                    font_size: 30
            BoxLayout:
                orientation: "horizontal"
                Label:
                    size_hint_x: 0.3
                    text: "Lon:"
                TextInput:
                    id: lon_txt_in
                    text: str(app.DEFAULT_LON)
                    font_size: 30
            BoxLayout:
                orientation: "horizontal"
                Label:
                    size_hint_x: 0.3
                    text: "Strength:"

                TextInput:
                    id: signal_txt_in
                    font_size: 30
                    size_hint_x: 0.6
                    text: "10"
                Label:
                    size_hint_x: 0.15
                    text: "[dB]"


        BoxLayout:
            size_hint_y: 0.2
            orientation: "horizontal"

            Button:
                text: 'Save'
                on_press: root.save()

            Button:
                text: 'Cancel'
                on_press: root.cancel()

<SaveUFOCoordinatesSourceDialog>:
    size_hint_y: 0.45
    size_hint_x: 0.35
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                orientation: "horizontal"
                Label:
                    size_hint_x: 0.3
                    text: "IP:"
                TextInput:
                    id: ip_txt_in
                    text: "127.0.0.1"
                    font_size: 30
            BoxLayout:
                orientation: "horizontal"
                Label:
                    size_hint_x: 0.3
                    text: "Port:"

                TextInput:
                    id: port_txt_in
                    font_size: 30
                    text: "55672"



        BoxLayout:
            size_hint_y: 0.2
            orientation: "horizontal"

            Button:
                text: 'Save'
                on_press: root.save()

            Button:
                text: 'Cancel'
                on_press: root.cancel()