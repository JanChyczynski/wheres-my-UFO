<MainLayout>
    do_default_tab: False
    tab_width: self.width / 2

    TabbedPanelItem:
        text: "Signal Finder"
        SignalFinder:

    TabbedPanelItem:
        text: "Localisation Visualiser"
        LocalisationVisualizer:

<SaveUserDialog>:
    size_hint_y: 0.45
    size_hint_x: 0.35
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                orientation: "horizontal"
                Label:
                    size_hint_x: 0.3
                    text: "Lat:"
                TextInput:
                    id: lat_txt_in
                    text: str(app.DEFAULT_LAT)
                    font_size: 30
            BoxLayout:
                orientation: "horizontal"
                Label:
                    size_hint_x: 0.3
                    text: "Lon:"
                TextInput:
                    id: lon_txt_in
                    text: str(app.DEFAULT_LON)
                    font_size: 30
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                size_hint_y: 0.2
                orientation: "horizontal"

                Button:
                    text: 'Save'
                    on_press: root.save()

                Button:
                    text: 'Cancel'
                    on_press: root.cancel()

            Button:
                text: 'Start using auto location'
                size_hint_y: 0.2
                on_press: root.auto_loc()

<SaveUFODialog>:
    size_hint_y: 0.6
    size_hint_x: 0.35
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                orientation: "horizontal"
                Label:
                    size_hint_x: 0.3
                    text: "Lat:"
                TextInput:
                    id: lat_txt_in
                    text: str(app.DEFAULT_LAT)
                    font_size: 30
            BoxLayout:
                orientation: "horizontal"
                Label:
                    size_hint_x: 0.3
                    text: "Lon:"
                TextInput:
                    id: lon_txt_in
                    text: str(app.DEFAULT_LON)
                    font_size: 30
            BoxLayout:
                orientation: "horizontal"

                Button:
                    text: 'Save'
                    on_press: root.save()

                Button:
                    text: 'Cancel'
                    on_press: root.cancel()
            Label:
                text: "Start receiving from socket"
                size_hint_y: 0.4
            BoxLayout:
                orientation: "horizontal"
                Label:
                    size_hint_x: 0.3
                    text: "IP: "
                TextInput:
                    id: ip_txt_in
                    text: app.DEFAULT_IP
                    font_size: 30
            BoxLayout:
                orientation: "horizontal"
                Label:
                    size_hint_x: 0.3
                    text: "Port:"
                TextInput:
                    id: port_txt_in
                    text: str(app.DEFAULT_PORT)
                    font_size: 30
            Button:
                text: 'Connect'
                on_press: root.socket_receive()




